<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:box_body"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:txt_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:white"
            ohos:bottom_padding="15vp"
            ohos:left_padding="25vp"
            ohos:right_padding="25vp"
            ohos:text="Share"
            ohos:text_alignment="horizontal_center"
            ohos:text_color="$color:black"
            ohos:text_size="14vp"
            ohos:top_padding="15vp"/>

        <DependentLayout
            ohos:id="$+id:box_custom"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:white"
            ohos:visibility="hide"/>

        <Image
            ohos:id="$+id:title_split_line"
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="$color:dialogSplitIOSLight"
            ohos:visibility="hide"/>

        <ScrollView
            ohos:id="$+id:box_scroller"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:white"
            ohos:weight="1">

            <TableLayout
                ohos:id="$+id:box_item"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment_type="align_contents"
                ohos:column_count="4"
                ohos:layout_alignment="horizontal_center"/>

        </ScrollView>

        <DirectionalLayout
            ohos:id="$+id:box_cancel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:white"
            ohos:orientation="vertical">

            <Image
                ohos:height="1px"
                ohos:width="match_parent"
                ohos:background_element="$color:dialogSplitIOSLight"/>

            <Image
                ohos:id="$+id:img_split"
                ohos:height="15vp"
                ohos:width="match_parent"
                ohos:background_element="$color:menuSplitSpaceKongzue"/>

            <Image
                ohos:height="1px"
                ohos:width="match_parent"
                ohos:background_element="$color:dialogSplitIOSLight"/>

            <Text
                ohos:id="$+id:btn_cancel"
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:left_padding="15vp"
                ohos:multiple_lines="false"
                ohos:right_padding="15vp"
                ohos:text=""
                ohos:text_alignment="center"
                ohos:text_color="$color:dark"
                ohos:text_size="16vp"/>

            <Image
                ohos:height="1px"
                ohos:width="match_parent"
                ohos:background_element="$color:dialogSplitIOSLight"/>

        </DirectionalLayout>

    </DirectionalLayout>

</DirectionalLayout>