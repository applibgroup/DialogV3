<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#f1f2f4"
    ohos:id="$+id:box_root">

    <com.kongzue.dialog.util.view.MaxHeightLayout
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:id="$+id:box_body"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:id="$+id:txt_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="10vp"
                ohos:bottom_padding="10vp"
                ohos:background_element="#ffffff"
                ohos:text_alignment="horizontal_center"
                ohos:text_color="#8f8f8f"
                ohos:text_size="12vp"
                ohos:visibility="hide" />

            <DependentLayout
                ohos:id="$+id:box_custom"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#ffffff"
                ohos:bottom_margin="10vp"
                ohos:visibility="hide"></DependentLayout>

            <Image
                ohos:id="$+id:title_split_line"
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="#2c000000"/>

            <ListContainer
                ohos:id="$+id:list_menu"
                ohos:height="150vp"
                ohos:background_element="#ffffff"
                ohos:width="match_parent"
                />

            <DirectionalLayout
                ohos:id="$+id:box_cancel"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#ffffff"
                ohos:orientation="vertical">

                <Image
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#2c000000"/>

                <Image
                    ohos:id="$+id:v"
                    ohos:height="15vp"
                    ohos:width="match_parent"
                    ohos:background_element="#f1f2f4"/>

                <Image
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#2c000000"/>

                <Text
                    ohos:id="$+id:btn_cancel"
                    ohos:height="50vp"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:button_menu_kongzue"
                    ohos:clickable="true"
                    ohos:right_padding="15vp"
                    ohos:text=""
                    ohos:text_alignment="center"
                    ohos:text_color="#353535"
                    ohos:text_font="Bold"
                    ohos:text_size="16vp"/>

                <Image
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#2c000000"/>

            </DirectionalLayout>

        </DirectionalLayout>
    </com.kongzue.dialog.util.view.MaxHeightLayout>
</DirectionalLayout>