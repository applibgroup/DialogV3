<?xml version="1.0" encoding="utf-8"?>
<com.kongzue.dialog.util.view.NotifyToastShadowView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:box_body"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$media:img_notification_shadow_ios"
        ohos:clickable="false"
        ohos:focusable="focus_disable"
        ohos:focusable_in_touch="false">

        <DirectionalLayout
            ohos:id="$+id:box_notic"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:id="$+id:btn_notic"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$color:white"
                ohos:bottom_padding="15vp"
                ohos:left_padding="15vp"
                ohos:right_padding="15vp"
                ohos:top_padding="15vp"
                ohos:orientation="vertical">

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:right_margin="10vp"
                        ohos:weight="1"
                        ohos:orientation="vertical">

                        <Text
                            ohos:id="$+id:txt_title"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:layout_alignment="vertical_center"
                            ohos:multiple_lines="false"
                            ohos:right_margin="10vp"
                            ohos:text="Title"
                            ohos:text_color="$color:dark"
                            ohos:text_size="16fp"/>

                        <Text
                            ohos:id="$+id:txt_message"
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:layout_alignment="vertical_center"
                            ohos:weight="1"
                            ohos:multiple_lines="false"
                            ohos:text="Content"
                            ohos:text_color="$color:notificationTipTextColorMaterial"
                            ohos:text_size="14fp"
                            ohos:top_margin="3vp"/>
                    </DirectionalLayout>

                    <Image
                        ohos:id="$+id:img_icon"
                        ohos:height="40vp"
                        ohos:width="40vp"/>
                </DirectionalLayout>

                <DependentLayout
                    ohos:id="$+id:box_custom"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:top_margin="10vp"
                    ohos:visibility="hide"/>
            </DirectionalLayout>

            <Image
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alpha="0.5"
                ohos:background_element="$media:img_notification_shadow"
                ohos:below="@+id/btn_notic"/>
        </DirectionalLayout>
    </DependentLayout>
</com.kongzue.dialog.util.view.NotifyToastShadowView>