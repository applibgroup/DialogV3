<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:box_root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:bkg"
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:text_alignment="center"
                ohos:id="$+id:txt_dialog_title"
                ohos:layout_alignment="horizontal_center"
                ohos:height="match_content"
                ohos:top_margin="15vp"
                ohos:width="match_content"
                ohos:text="SubTitle"
                ohos:text_color="$color:black"
                ohos:text_size="17vp"
                ohos:text_font="BOLD"/>

            <ScrollView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:id="$+id:scroller">
            <Text
                ohos:text_alignment="center"
                ohos:id="$+id:txt_dialog_tip"
                ohos:layout_alignment="horizontal_center"
                ohos:height="match_content"
                ohos:left_margin="15vp"
                ohos:right_margin="15vp"
                ohos:top_margin="10vp"
                ohos:width="match_parent"
                ohos:text="Test Text"
                ohos:text_color="$color:black"
                ohos:text_size="13vp"
                ohos:scrollable="true"
                ohos:multiple_lines="true"/>
            </ScrollView>

            <DependentLayout
                ohos:id="$+id:box_custom"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="10vp"
                ohos:visibility="hide"></DependentLayout>

            <com.kongzue.dialog.util.view.MaxHeightLayout
                ohos:id="$+id:box_input"
                ohos:height="match_content"
                ohos:width="match_parent">

                <TextField
                    ohos:background_element="$graphic:editbox_dialog_bkg"
                    ohos:text_alignment="center"
                    ohos:id="$+id:txt_input"
                    ohos:layout_alignment="horizontal_center"
                    ohos:height="match_content"
                    ohos:left_margin="15vp"
                    ohos:right_margin="15vp"
                    ohos:top_margin="10vp"
                    ohos:width="match_parent"
                    ohos:scrollable="false"
                    ohos:bottom_padding="10vp"
                    ohos:top_padding="10vp"
                    ohos:scrollbar_thickness="7vp"
                    ohos:text="Enter Text"
                    ohos:hint="Enter Text"
                    ohos:text_color="#000000"
                    ohos:text_size="18vp"
                    ohos:visibility="hide"/>

            </com.kongzue.dialog.util.view.MaxHeightLayout>



            <DirectionalLayout
                ohos:id="$+id:box_button"
                ohos:layout_alignment="horizontal_center"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:background_element="#dfdfdf"
                ohos:orientation="horizontal">

                <Image
                    ohos:background_element="#2c000000"
                    ohos:id="$+id:split_horizontal"
                    ohos:height="match_parent"
                    ohos:width="1vp"
                    ohos:visibility="hide"/>

                <Text
                    ohos:clickable="true"
                    ohos:text_alignment="center"
                    ohos:id="$+id:btn_selectNegative"
                    ohos:height="50vp"
                    ohos:weight="1"
                    ohos:width="match_parent"
                    ohos:text="cancel"
                    ohos:text_color="#000000"
                    ohos:text_size="14vp"
                    ohos:background_element="$graphic:button_selectdialog_kongzhue_white"/>
                <Image
                    ohos:background_element="#2c000000"
                    ohos:id="$+id:split_vertical1"
                    ohos:height="match_parent"
                    ohos:width="1vp"
                    ohos:visibility="hide"/>

                <Text
                    ohos:clickable="true"
                    ohos:text_alignment="center"
                    ohos:id="$+id:btn_selectOther"
                    ohos:height="50vp"
                    ohos:weight="1"
                    ohos:width="match_parent"
                    ohos:text="other"
                    ohos:text_color="#000000"
                    ohos:text_size="14vp"
                    ohos:visibility="hide"
                    ohos:background_element="$graphic:button_selectdialog_kongzhue_white"/>

                <Image
                    ohos:background_element="#2c000000"
                    ohos:id="$+id:split_vertical2"
                    ohos:width="1vp"
                    ohos:height="match_parent"
                    ohos:visibility="hide"/>


                <Text
                    ohos:clickable="true"
                    ohos:text_alignment="center"
                    ohos:id="$+id:btn_selectPositive"
                    ohos:height="50vp"
                    ohos:weight="1"
                    ohos:width="match_parent"
                    ohos:text="ok"
                    ohos:text_color="#000000"
                    ohos:text_size="14vp"
                    ohos:background_element="$graphic:button_selectdialog_kongzhue_blue"/>
            </DirectionalLayout>

        </DirectionalLayout>

    </DependentLayout>

</DependentLayout>