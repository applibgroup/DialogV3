<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:box_body"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <DependentLayout
            ohos:id="$+id:box_share"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10vp"
            ohos:weight="1"
            ohos:left_margin="10vp"
            ohos:orientation="vertical"
            ohos:right_margin="10vp">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:top_padding="10vp">

                <Text
                    ohos:id="$+id:txt_title"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="15vp"
                    ohos:text_alignment="center"
                    ohos:left_margin="25vp"
                    ohos:right_margin="25vp"
                    ohos:text=""
                    ohos:text_color="$color:tipTextColor"
                    ohos:text_size="12vp"
                    ohos:text_weight="700"
                    ohos:top_margin="5vp"
                    ohos:visibility="hide"/>

                <DependentLayout
                    ohos:id="$+id:box_custom"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:visibility="hide"/>

                <Image
                    ohos:id="$+id:title_split_line"
                    ohos:height="1px"
                    ohos:width="match_parent"
                    ohos:background_element="$color:dialogSplitIOSLight"
                    ohos:visibility="hide"/>

                <com.kongzue.dialog.util.view.IOSScrollView
                    ohos:height="110vp"
                    ohos:width="match_parent"
                    ohos:scrollbar_overlap_enabled="false">

                    <DirectionalLayout
                        ohos:id="$+id:box_item"
                        ohos:height="match_parent"
                        ohos:width="match_content"
                        ohos:layout_alignment="center_vertical"
                        ohos:left_padding="10vp"
                        ohos:orientation="horizontal"
                        ohos:right_padding="10vp"/>
                </com.kongzue.dialog.util.view.IOSScrollView>
            </DirectionalLayout>
        </DependentLayout>

        <DependentLayout
            ohos:id="$+id:box_cancel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10vp"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp"
            ohos:top_margin="-2vp">

            <Text
                ohos:id="$+id:btn_cancel"
                ohos:height="53vp"
                ohos:width="match_parent"
                ohos:text_alignment="center"
                ohos:left_padding="15vp"
                ohos:multiple_lines="false"
                ohos:right_padding="15vp"
                ohos:text="CANCEL"
                ohos:text_color="$color:dialogButtonIOSNormal"
                ohos:text_size="19vp"
                ohos:text_weight="700"/>
        </DependentLayout>
    </DirectionalLayout>
</DirectionalLayout>