<?xml version="1.0" encoding="utf-8"?>
<com.kongzue.dialog.util.view.NotifyToastShadowView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:box_body"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$media:img_notification_shadow_ios"
        ohos:clickable="false"
        ohos:focusable="focus_disable"
        ohos:focusable_in_touch="false">

        <DirectionalLayout
            ohos:id="$+id:box_notic"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:id="$+id:btn_notic"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_noti"
                ohos:orientation="vertical">

                <DirectionalLayout
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:layout_alignment="vertical_center"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:id="$+id:img_icon"
                        ohos:width="30vp"
                        ohos:height="30vp"
                        ohos:padding="5vp"/>

                    <Text
                        ohos:id="$+id:txt_title"
                        ohos:width="match_content"
                        ohos:height="50vp"
                        ohos:layout_alignment="vertical_center"
                        ohos:left_margin="5vp"
                        ohos:bottom_padding="15vp"
                        ohos:right_margin="10vp"
                        ohos:multiple_lines="false"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:text_weight="700"/>

                    <Text
                        ohos:id="$+id:txt_message"
                        ohos:height="50vp"
                        ohos:width="match_parent"
                        ohos:layout_alignment="vertical_center"
                        ohos:multiple_lines="false"
                        ohos:text_color="$color:white"
                        ohos:bottom_padding="15vp"
                        ohos:text_size="16fp"
                        ohos:weight="1"/>

                </DirectionalLayout>

                <DependentLayout
                    ohos:id="$+id:box_custom"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"
                    ohos:visibility="hide"/>

            </DirectionalLayout>

            <Image
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$media:img_notification_shadow"
                ohos:below="@id/btn_notic"/>
        </DirectionalLayout>

    </DependentLayout>

</com.kongzue.dialog.util.view.NotifyToastShadowView>